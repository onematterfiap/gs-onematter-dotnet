@model IEnumerable<OneMatter.Models.Job>

@{
    ViewData["Title"] = "Gerir Vagas";
}

<div class="page-container">

    <div class="page-header">
        <h2 class="page-title">
            <i class="fas fa-briefcase me-2"></i>
            @ViewData["Title"]
        </h2>
        <div class="page-header-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Publicar Nova Vaga
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm table-card">
            <div class="card-header bg-white p-3 px-4 d-flex flex-wrap justify-content-between align-items-center">
                <h4 class="h5 mb-0">Vagas Publicadas</h4>

                <form class="table-search-form" onsubmit="return false;">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light border-0">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="search" id="jobSearchInput" class="form-control bg-light border-0" placeholder="Filtrar vagas...">
                    </div>
                </form>
            </div>

            <div class="card-body p-0">
                <table class="table table-hover m-0">
                    <thead class="table-light table-header-stylish">
                        <tr>
                            <th scope="col">Vaga</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="jobTableBody">
                        @foreach (var item in Model)
                        {
                            <tr class="job-row">
                                <td class="align-middle job-title-location">
                                    <div class="fw-bold">@Html.DisplayFor(modelItem => item.Title)</div>
                                    <div class="small text-muted">@Html.DisplayFor(modelItem => item.Location)</div>
                                </td>

                                <td class="align-middle">
                                    @{
                                        string statusText = item.Status.ToString();
                                        string badgeClass = "bg-secondary";

                                        switch (statusText.ToLower())
                                        {
                                            case "aberta":
                                                badgeClass = "bg-success";
                                                break;
                                            case "fechada":
                                                badgeClass = "bg-danger";
                                                break;
                                            case "pausada":
                                                badgeClass = "bg-warning text-dark";
                                                break;
                                        }
                                    }
                                    <span class="badge @badgeClass rounded-pill fs-small">@statusText</span>
                                </td>

                                <td class="text-end align-middle">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-controller="Applications" asp-action="Index" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="fas fa-users me-1"></i> Candidatos
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Editar">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Excluir">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm empty-state-card">
            <div class="card-body text-center">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h4 class="h5">Nenhuma vaga publicada</h4>
                <p class="text-muted">Clique em "Publicar Nova Vaga" para começar a recrutar.</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Espera o documento carregar
        document.addEventListener("DOMContentLoaded", function() {

            // Pega os elementos pelo ID que definimos
            const searchInput = document.getElementById("jobSearchInput");
            const tableBody = document.getElementById("jobTableBody");
            const rows = tableBody.getElementsByClassName("job-row"); // Pega todas as linhas

            // Adiciona um "escutador" que roda a função sempre que você digita
            searchInput.addEventListener("keyup", function() {

                // Pega o texto digitado e converte para minúsculas
                const searchText = searchInput.value.toLowerCase();

                // Faz um loop por todas as linhas da tabela
                for (let i = 0; i < rows.length; i++) {
                    const row = rows[i];

                    // Pega todo o texto da linha e converte para minúsculas
                    const rowText = row.textContent.toLowerCase();

                    // Se o texto da linha INCLUIR o texto da busca...
                    if (rowText.includes(searchText)) {
                        row.style.display = ""; // Mostra a linha
                    } else {
                        row.style.display = "none"; // Esconde a linha
                    }
                }
            });
        });
    </script>
}